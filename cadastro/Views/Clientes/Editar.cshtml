<h1>Editar Cliente</h1>
<hr>
<form action="/cliente/@ViewBag.Cliente.Id/atualizar" method="post">
  <label for="nome">Nome:</label><br>
  <input type="text" id="nome" value="@ViewBag.Cliente.Nome" name="nome" required="required"><br>

  <label for="telefone">Telefone:</label><br>
  <input type="text" id="telefone" value="@ViewBag.Cliente.Telefone" name="telefone" required="required"><br>

  <label for="email">E-mail:</label><br>
  <input type="email" id="email" value="@ViewBag.Cliente.Email" name="email" required="required"><br><br>

  <input type="submit" value="Atualizar">
</form>
