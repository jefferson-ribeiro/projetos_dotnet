<style>
  table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
  }

  td,
  th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
  }

  tr:nth-child(even) {
    background-color: #dddddd;
  }
</style>

<br>
<h1>Consultar Clientes cadastrados:</h1>
<hr>

<table>
  <tr>
    <th>Nome</th>
    <th>Telefone</th>
    <th>E-mail</th>
    <th>Operações</th>
  </tr>
  @foreach (Cliente cliente in ViewBag.clientes)
  {
    <tr>
      <td>@cliente.Nome</td>
      <td>@cliente.Telefone</td>
      <td>@cliente.Email</td>
      <td>
        <a class="btn btn-warning" href="/cliente/@cliente.Id">Editar</a>
        <a class="btn btn-danger" href="#" onclick="excluir('/cliente/@cliente.Id/excluir')">Excluir</a>
      </td>
    </tr>
  }
</table>
<br>
<hr>
<a href="/">Voltar</a>

<script>
  function excluir(url) {
    if (confirm("Deseja realmente excluir")) {
      window.location.href = url
    }
  }
</script>