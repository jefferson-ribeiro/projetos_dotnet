<br>
<h1>Editar Cliente</h1>
<hr>
<form action="/conta/@ViewBag.Conta.Id/atualizar" method="post">
  <label for="agencia">Agência</label><br>
  <input type="number" id="agencia" name="agencia" value="@ViewBag.Conta.Agencia" required="required"><br>

  <label for="tipo">Tipo</label><br>
  <select id="tipo" name="tipo" required="required">
    <option value="0" selected='@((ViewBag.Conta.Tipo == 0) ? "selected" : null)'>Conta corrente</option>
    <option value="1" selected='@((ViewBag.Conta.Tipo == 1) ? "selected" : null)'>Conta poupança</option>
    <option value="2" selected='@((ViewBag.Conta.Tipo == 2) ? "selected" : null)'>Conta investimento</option>
  </select><br>

  <label for="saldo">Saldo</label><br>
  <input type="double" id="saldo" value="@ViewBag.Conta.Saldo" name="saldo" required="required"><br>

  <label for="clienteId">Cliente ID</label><br>

  <select id="clienteId" name="clienteId" required="required">
    @foreach (Cliente cliente in ViewBag.Clientes)
    {
      <option value="@cliente.Id" selected='@((ViewBag.Conta.ClienteID == cliente.Id) ? "selected" : null)'>@cliente.Nome
      </option>
    }
  </select>
  <br><br>

  <input type="submit" value="Enviar">
</form>
<br>
<hr>
<a href="/Lista">Voltar</a>